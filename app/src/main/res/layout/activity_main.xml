<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_login_fb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FB登陆"/>

        <Button
            android:id="@+id/btn_login_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fb_ac短信登陆"/>

        <Button
            android:id="@+id/btn_login_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fb_ac邮箱登陆"/>

        <Button
            android:id="@+id/btn_login_avid_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="avid_ac短信登陆"/>

        <Button
            android:id="@+id/btn_login_avid_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="avid_ac邮箱登陆"/>

        <Button
            android:id="@+id/btn_login_guest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游客登陆"/>
    </LinearLayout>

</LinearLayout>